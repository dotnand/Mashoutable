- content_for :optional_javascript do
  = javascript_include_tag 'mashout'

- content_for :content_body do
  = form_tag shoutout_create_path do  
    .span-15.box
      %h1.left.clear  1.
      %h3.list-item
        %span
          Add a
          = succeed "?" do
            %span.orange Video
          (or 2)
      .content-bubble.span-6.left.clear
        .bubble-top
        .bubble-body
          %p Click Record, we'll auto stop (counting down from 30 seconds), save, assign a shortened URL, and add it to your Video Library, OR stop it manually when you're ready, then click save...
        .bubble-bottom
      .span-9.left
        = render 'nimbb_recorder'
      %hr.space
      .span-6.left.clear
        &nbsp;
      = render 'videos'
    = render 'target_list_item', :item_number => 2
    = render 'hashtag_list_item', :item_number => 3
    = render 'trend_list_item', :item_number => 4
    = render 'comment_list_item', :item_number => 5

- content_for :out do
  = render "out", :form_path => shoutout_create_path
