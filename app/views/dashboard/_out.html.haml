/ sidebar
#sidebar.right
  / floating sidebar
  #ready-to-mashout
    .content
      %h3.left.orange.inset-type
        Ready to MASHOUT?
      #quote
        .top
        .body
          .box
            %p
              %span#mashout-chars-left
                140
              Characters Left
            .clear.left
              = form_tag form_path do
                %textarea#out{:maxlength => '140', :name => 'out'}
                  = @out
                .left
                  %input.toggle-twitter-off.left{:type => 'submit', :id => 'toggle-twitter', :value => ''}
                  %input.toggle-facebook-off.left{:type => 'submit', :id => 'toggle-facebook', :value => ''}
                .right
                  %input.button{:type => "submit", :value => "Send"}/
                  %input.button{:id => 'preview-out', :type => "submit", :value => "Preview"}/
                  %input.button{:id => 'preview-clear-out', :type => "submit", :value => "Cancel"}/
        .bottom
        %span.quoted-by.clear.last
          %span.icon.right
  :javascript
    bindMashoutPreviewClick("#{mashout_preview_path}")
    bindMashoutClearPreviewClick();

