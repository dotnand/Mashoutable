#media-icons.span-15.left.clear
  %ul
    - media_sources.each do |media_source|
      %li{:class => media_source[:name].downcase.gsub(' ', '-')}
        %span.icon
          %span.overlay
          %img{:src => "#{asset_path('media-icons/' + media_source[:image])}", :alt => media_source[:name], :title => media_source[:name]}
        = "@#{media_source[:name]}"
        - media_checkbox_id = "mashout-media-#{sanitize_twitter_screen_name(media_source[:screen_name])}"
        %input{:id => media_checkbox_id, :type => 'checkbox', :name => 'mashout-media-sources[]', :value => media_source[:screen_name], :style => 'display: none;'}
  %input{:id => 'hidden-media-sources', :type => 'hidden', :value => ''}
  :javascript
    bindMediaIconToggle();

