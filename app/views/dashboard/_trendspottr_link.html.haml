- id = "mashout-trend-links-#{trend_counter}"
%li.left{:style => 'width:240px;margin-right:15px;margin-bottom:15px;'}
  %div{:style => "width:240px;height:180px;background-image:url(#{asset_path('spinner.gif')});background-repeat:no-repeat;background-size:240px 180px;"}
    = link_to(image_tag("http://875.pagepeeker.com/thumbs.php?size=z&wait=1&url=#{trend[:name]}"), trend[:name], :class => 'fancybox iframe')
  %input{:id => id, :name => "mashout-trendspottr-trends[]", :type => "checkbox", :value => "#{URI.encode(trend[:value])}"}
  %label{:for => id}
    = trend[:name] << sprintf(" (%.2f)",trend[:weight])
  :javascript
    $(function() { bindDynamicPreviewCheckboxClick("##{id}", '#hidden-trendspottr-trends', '#out-preview'); })
