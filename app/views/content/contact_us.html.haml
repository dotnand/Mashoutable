- content_for :optional_meta_title do
  %title Mashoutable Contact Us

- content_for :optional_meta do
  %meta{:name => 'keywords', :content=> 'Contact Mashoutable'}
  %meta{:name => 'description', :content => 'Our physical address, telephone, and email address'}

- content_for :title do
  .prepend-top
    .left
      %h1.inset-type Contact Us

- content_for :content_body do
  .span-13.box.left
    = form_for @message, :url => contact_us_message_path do |form|
      = form.label :name
      = form.text_field :name, :class => 'span-10'
      = form.label :email, :class => 'clear'
      = form.text_field :email, :class => 'span-10'
      = form.label :subject, :class => 'clear'
      = form.text_field :subject, :class => 'span-10'
      = form.label :body, :class => 'clear'
      = form.text_area :body, :cols => nil, :class => 'left span-10'
      %div{:class => 'span-12 align-right'}
        %input.button{:type => 'submit', :value => 'Send'}

  .span-9.box.right
    %span.left.span-9
      %label Toll Free:
      (855) MASHOUT
    %span.clear.left.span-9
      %label Email:
      Contact@Mashoutable.info
    %span.clear.left.span-9
      %label.mail Snail Mail:
      Mashoutable&trade;
      %br/
      113 Barksdale Professional Center
      %br/
      Newark, DE 19711
	  
  .span-9.box.right
    %p
